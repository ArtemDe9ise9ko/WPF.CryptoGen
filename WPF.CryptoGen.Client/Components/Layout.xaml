<UserControl x:Class="WPF.CryptoGen.Client.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.CryptoGen.Client.Components" 
             xmlns:viewmodels="clr-namespace:WPF.CryptoGen.Client.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--todo Border next may be a progress bar-->
        <local:NavigationBar Grid.Row="0" BorderThickness="0, 0, 0, 5" BorderBrush="{DynamicResource LineNavBottom}" DataContext="{Binding NavigationBarViewModel}"/>
        
        <ContentControl
            Grid.Row="1"
            MaxWidth="1000"
            Content="{Binding ContentViewModel}" />
        
    </Grid>
</UserControl>
