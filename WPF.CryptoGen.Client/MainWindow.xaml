<Window x:Class="WPF.CryptoGen.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.CryptoGen.Client"
        xmlns:views="clr-namespace:WPF.CryptoGen.Client.Views"
        xmlns:viewmodels="clr-namespace:WPF.CryptoGen.Client.ViewModels"
        xmlns:components="clr-namespace:WPF.CryptoGen.Client.Components"
        mc:Ignorable="d"
        Title="MainWindow" Width="1000" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:CryptocurrencyViewModel}">
                <views:CryptocurrencyView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ExchangesViewModel}">
                <views:ExchangesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:LayoutViewModel}">
                <components:Layout />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>

</Window>
